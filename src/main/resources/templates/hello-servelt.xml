<?xml version="1.0" encoding="UTF-8"?>
<!-- Minimal servlet descriptor (informational). Spring Boot typically auto-configures servlets, so this file is optional.
     Placed under templates as requested by the user â€” if you want it applied by the container, move to WEB-INF/web.xml in the proper war layout. -->
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <display-name>AuthApp</display-name>

    <!-- Welcome file to forward root to the addStudent page -->
    <welcome-file-list>
        <welcome-file>addStudent</welcome-file>
    </welcome-file-list>

    <!-- Example servlet mapping (not required with Spring Boot controllers) -->
    <servlet>
        <servlet-name>jsp</servlet-name>
        <servlet-class>org.apache.jasper.servlet.JspServlet</servlet-class>
        <init-param>
            <param-name>development</param-name>
            <param-value>true</param-value>
        </init-param>
        <load-on-startup>3</load-on-startup>
    </servlet>

    <servlet-mapping>
        <servlet-name>jsp</servlet-name>
        <url-pattern>*.jsp</url-pattern>
    </servlet-mapping>

</web-app>
